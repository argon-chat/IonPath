{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/argon-config.schema.json",
  "title": "Argon config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "features",
    "generators"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "orleans",
          "std",
          "vector"
        ]
      },
      "uniqueItems": true
    },
    "generators": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "dotnet": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "features",
            "outputs"
          ],
          "properties": {
            "features": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "server",
                  "client",
                  "models"
                ]
              },
              "uniqueItems": true
            },
            "outputs": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "browser": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "outputFile"
          ],
          "properties": {
            "outputFile": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "rust": {
          "type": "object",
          "additionalProperties": true
        },
        "go": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  },
  "examples": [
    {
      "name": "ArgonContracts",
      "features": [
        "orleans",
        "std"
      ],
      "generators": {
        "dotnet": {
          "features": [
            "server",
            "client",
            "models"
          ],
          "outputs": "./"
        },
        "browser": {
          "outputFile": "./argonChat.ts"
        }
      }
    }
  ]
}