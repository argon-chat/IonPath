{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/argon-config.schema.json",
  "title": "Argon config",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "features", "generators"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["orleans", "std", "vector"]
      },
      "uniqueItems": true
    },
    "generators": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "platform", "output"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["server", "client"]
          },
          "platform": {
            "type": "string",
            "enum": ["dotnet", "browser", "rust", "go"]
          },
          "output": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  },
  "examples": [
    {
      "name": "ArgonContracts",
      "features": ["orleans", "std"],
      "generators": [
        { "type": "server", "platform": "dotnet", "output": "@/server" },
        { "type": "client", "platform": "browser", "output": "@/client" }
      ]
    }
  ]
}