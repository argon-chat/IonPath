{
  "scopeName": "source.ionpath",
  "name": "IonPath",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#modifiers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ionpath",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ionpath",
          "match": "\\b(msg|flags|enum|typedef|service|attribute|#use|#feature)\\b"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "name": "storage.modifier.ionpath",
          "match": "\\b(stream|unary|internal)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.ionpath",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|string|guid)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ionpath",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ionpath",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.ionpath",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ionpath",
          "match": "\\b\\d+(?:\\s*<<\\s*\\d+)?\\b"
        }
      ]
    }
  }
}